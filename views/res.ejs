<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <style>
      body {
        font-family: Arial, sans-serif;
        padding: 20px;
        background-color: #f2f2f2;
      }

      .card {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
        padding: 40px;
        margin: 20px;
      }

      h1 {
        text-align: center;
        margin-bottom: 40px;
        font-size: 36px;
        color: #333;
      }

      h2 {
        background-color: #ccc;
        padding: 10px;
        font-size: 18px;
        color: white;
        text-align: center;
      }

      h3 {
        margin-top: 40px;
        font-size: 24px;
        color: #555;
        border-radius: 40px;
      }

      a {
        font-size: 18px;
        color: blue;
        text-decoration: none;
      }

      .search-results {
        margin-top: 20px;
        display: flex;
        flex-wrap: wrap;
      }

      .search-result {
        width: 50%;
        margin-bottom: 20px;
      }

      .search-result a {
        display: block;
        padding: 10px;
        background-color: #eee;
        border-radius: 5px;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <h1>Extracted information with their search results</h1>
    <br />
    <div id="cardContainer">
      <% paragraphs.forEach(function(paragraph, index) { %>
      <div class="card" id="card<%= index %>">
        <h2>QID: <%= paragraph.qID %></h2>
        <p>Question: <%= paragraph.q %></p>

        <% if (paragraph.result.google) { %>
        <h3>Google search results:</h3>
        <br />
        <% for (let i = 0; i < paragraph.result.google.length; i++) { %>
        <a href="<%= paragraph.result.google[i].link %>">
          <%= paragraph.result.google[i].title %>
        </a>
        <br />
        <% } %>
        <br />
        <% } %> <% if (paragraph.result.yahoo) { %>
        <h3>yahoo search results:</h3>
        <br />
        <% for (let i = 0; i < paragraph.result.yahoo.length; i++) { %>
        <a href="<%= paragraph.result.yahoo[i].link %>">
          <%= paragraph.result.yahoo[i].title %>
        </a>
        <br />
        <% } %>
        <br />
        <% } %> <% if (paragraph.result.bing) { %>
        <h3>Bing search results:</h3>
        <br />
        <% for (let i = 0; i < paragraph.result.bing.length; i++) { %>
        <a href="<%= paragraph.result.bing[i].link %>">
          <%= paragraph.result.bing[i].title %>
        </a>
        <br />
        <% } %> <% } %> <% if (paragraph.result.yandex) { %>
        <h3>Yandex search results:</h3>
        <br />
        <% for (let i = 0; i < paragraph.result.yandex.length; i++) { %>
        <a href="<%= paragraph.result.yandex[i].link %>">
          <%= paragraph.result.yandex[i].title %>
        </a>
        <br />
        <% } %> <% } %>
      </div>
      <% }); %>
    </div>
  </body>
</html>
